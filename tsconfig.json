{
    "compilerOptions": {
      "target": "ES2020",  
      "module": "commonjs",  
      "esModuleInterop": true,  
      "moduleResolution": "node",  
      "outDir": "./dist",  
      "strict": true,  
      "skipLibCheck": true,  
      "forceConsistentCasingInFileNames": true 
    },
    "include": [
      "src/**/*.ts",  
      "test/**/*.ts"  
    ],
    "exclude": [
      "node_modules"  
    ]
  }
  